generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  habits Habit[]
}

enum Frequency {
  daily
  weekly
  monthly
}

model Habit {
  id          Int       @id @default(autoincrement())
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  name        String
  description String?
  frequency   Frequency
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  logs        HabitLog[]
}

model HabitLog {
  id         Int      @id @default(autoincrement())
  habit      Habit    @relation(fields: [habit_id], references: [id])
  habit_id   Int
  log_date   DateTime
  year       Int
  month      Int
  day        Int
  completed  Boolean
  note       String?
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model CalendarDate {
  date    DateTime @id
  year    Int
  month   Int
  day     Int
  weekday Int // 0:日曜 〜 6:土曜
}
